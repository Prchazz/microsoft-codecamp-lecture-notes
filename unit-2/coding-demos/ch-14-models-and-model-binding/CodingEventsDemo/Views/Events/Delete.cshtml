<h1>Delete Event</h1>

<form method="post">
    @foreach (var evt in ViewBag.events)
    {
            <label>
                <span>@evt.Name</span>

                <input
                       type="checkbox"
                       name="eventIds"
                       value="@evt.Id"
                       class="form-control"
                  >
            </label>
    }

    <input type="submit" value="Delete Selected Events" class="btn btn-danger">

</form>