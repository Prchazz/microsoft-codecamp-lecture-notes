@{
}


<form method="post">
    @foreach (var evt in ViewBag.events)
    {
        <label>
            <span>@evt.Name</span>

            <input type="radio"
                   name="eventId"
                   value="@evt.Id"
                   class="form-control">
        </label>
    }

    <input type="submit" value="Delete Selected Events" class="btn">

</form>